			<? } ?>

			Ext.getCmp(marcas.id+'-btn_editar').disable();
			Ext.getCmp(marcas.id+'-btn_eliminar').disable();
			
			Ext.getCmp(marcas.id+'-buscar').setVisible(!sw);			
			Ext.getCmp(marcas.id+'-combo_describe').setVisible(!sw);
			
